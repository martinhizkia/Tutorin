<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginHorizontal="60dp"
    android:layout_marginTop="4dp"

    android:layout_marginBottom="50dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/buttonauth_shape"
            android:backgroundTint="@color/colorPrimaryDark"
            />


        <TextView
            android:id="@+id/text_view"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="40dp"
            android:text="Mata Kuliah"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc_textview"
            android:layout_width="223dp"
            android:layout_height="80dp"
            android:layout_below="@+id/text_view"
            android:layout_alignStart="@+id/text_view"
            android:layout_alignEnd="@+id/text_view"
            android:layout_marginStart="-11dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="-14dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>